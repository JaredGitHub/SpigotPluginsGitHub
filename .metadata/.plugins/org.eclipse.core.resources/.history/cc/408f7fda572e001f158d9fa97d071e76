package me.Jared.LandMine;

import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.block.BlockPlaceEvent;

import me.Jared.LandMinePlugin;

public class LandMineListener implements Listener
{
	private int runs;
	
	public LandMineListener(int runs)
	{
		
	}
	
	@EventHandler
	public void onBlockPlace(BlockPlaceEvent e)
	{
		Player player = e.getPlayer();
		
		if(runs >= 2)
		{
			return;
		}

		LandMine landMine = new LandMine(player.getWorld());
		if(e.getBlock().getType() == landMine.getItem())
		{
			LandMineRunnable warzLandMine = new LandMineRunnable(player.getWorld());
			warzLandMine.runTaskTimer(LandMinePlugin.getInstance(), 0, 5);
			runs++;
		}
	}

}
